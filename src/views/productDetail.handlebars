<h1>{{product.title}}</h1>

<img src="{{product.thumbnail}}" alt="{{product.title}}" style="max-width:300px;" />

<p><strong>Descripción:</strong> {{product.description}}</p>
<p><strong>Precio:</strong> ${{product.price}}</p>
<p><strong>Stock:</strong> {{product.stock}}</p>
<p><strong>Categoría:</strong> {{product.category}}</p>

<form id="addToCartForm" action="/api/carts/{{cartId}}/product/{{product._id}}" method="POST">
  <label for="quantity">Cantidad:</label>
  <input type="number" name="quantity" id="quantity" value="1" min="1" max="{{product.stock}}" required />
  <button type="submit">Agregar al carrito</button>
</form>

<script>
  const form = document.getElementById('addToCartForm');
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const quantity = form.quantity.value;

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ quantity: parseInt(quantity) }),
      });
      const result = await response.json();
      if (result.status === 'success') {
        alert('Producto agregado al carrito');
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error al agregar al carrito');
    }
  }
);
</script>
